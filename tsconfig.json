{
    "compileOnSave": false,
    "compilerOptions": {
        "sourceMap": true,
        "target": "esnext",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": [
            "node"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "outDir": "./dist"
    },
    "exclude": [
        "node_modules",
        "server",
        "client",
        "src/definition",
        "examples"
    ],
    "include": [
        "src"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
